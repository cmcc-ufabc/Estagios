<h1>Docentes Cadastrados</h1>

<table>
  <tr>
    <th>Docente</th>
    <th>Centro</th>
    <th>Email</th>
    <th>Ramal</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @docentes.each do |docente| %>
  <tr>
    <td><%= docente.docente %></td>
    <td><%= docente.centro %></td>
    <td><%= docente.email %></td>
    <td><%= docente.ramal %></td>
    <td><%= link_to 'Visualizar', docente %></td>
    <td><%= link_to 'Editar', edit_docente_path(docente) %></td>
    <td><%= link_to 'Excluir', docente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Cadastar Docente', new_docente_path %>
