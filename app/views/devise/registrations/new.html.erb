<h2>Cadastrar</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



  <div><%= f.label :nome %><br />
  <%= f.text_field :nome %></div>
<p>
</p>

  <div><%= f.label :email %><br /><p><font color="red">Atenção: O e-mail utilizado deve ser @ufabc.edu.br ou @aluno.ufabc.edu.br</font></p>
  <%= f.email_field :email %></div>

  <div><%= f.label :telefone_para_contato %><br />
  <%= f.text_field :telefone %></div>

  <div><%= f.label :RA_ou_Siape %><br />
  <%= f.text_field :ra %></div>

  <div><%= f.label :senha %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :confirme_a_senha %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :tipo %><br />
  <%= f.select :tipo, [["Aluno"], ["Servidor (CMCC)"],["Servidor (CCNH)"]], {}, {:onChange => "hello()"}%></div>
  
<p>
  <div>
<%= f.submit "Avançar" %>
  </div>
</p>
<% end %>

